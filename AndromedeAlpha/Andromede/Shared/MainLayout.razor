@inherits LayoutComponentBase

<div class="page">
    @if (PageType.ToString() != "Andromede.Pages.CardManagment.CustomerCardsViewer"
         && PageType.ToString() != "Andromede.Pages.CardManagment.FullSizePdfViewer")
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }


    <div class="main">
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
@code{

    public Type PageType { get; set; }

    protected override void OnParametersSet()
    {
        PageType = (this.Body.Target as RouteView)?.RouteData.PageType;
    }
}